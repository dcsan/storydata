{
  "$id": "https://cbg.rik.ai/story.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "storyline",
  "definitions": {
    "states": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "the name of the state"
          },
          "imageUrl": {
            "type": "string",
            "description": "full URL of an image"
          },
          "webUrl": {
            "type": "string",
            "description": "web link"
          },
          "webLinkText": {
            "type": "string",
            "description": "visible text on link"
          },
          "short": {
            "type": "string"
          },
          "navbar": {
            "type": "string",
            "description": "show the basic buttons bar with look|item|task|help"
          },
          "hint": {
            "type": "string"
          },
          "long": {
            "type": "string"
          },
          "buttons": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "branch": {
      "type": "object",
      "additionalProperties": false,
      "description": "always / then branch",
      "properties": {
        "reply": {
          "type": "string"
        },
        "emoji": {
          "type": "string"
        },
        "hint": {
          "type": "string"
        },
        "navbar": {
          "type": "string"
        },
        "goto": {
          "type": "string"
        },
        "callJS": {
          "type": "string"
        },
        "setProps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "imageUrl": {
          "type": "string"
        },
        "buttons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "take": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "drop": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "before": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "events to call back into the system on triggering this branch"
          }
        },
        "after": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "events to call back into the system on triggering this branch"
          }
        }
      }
    }
  },
  "properties": {
    "story": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "cname",
        "title"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "name of the story"
        },
        "cname": {
          "type": "string",
          "description": "canonical computer readable name"
        },
        "intro": {
          "type": "string",
          "description": "canonical computer readable name"
        },
        "startRoomDefault": {
          "type": "string",
          "description": "If a specific start room is not found"
        },
        "startRooms": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "channels": {
                "type": "string"
              },
              "room": {
                "type": "string"
              }
            }
          }
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "hint": {
                "type": "string"
              }
            }
          }
        },
        "help": {
          "type": "object",
          "properties": {
            "basic": {
              "type": "string"
            }
          }
        }
      }
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "states"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "the name of the room"
          },
          "state": {
            "type": "string",
            "description": "the current state of the room"
          },
          "states": {
            "$ref": "#/definitions/states"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "match"
              ],
              "properties": {
                "match": {
                  "type": "string"
                },
                "always": {
                  "$ref": "#/definitions/branch"
                },
                "if": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "all": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "then": {
                  "$ref": "#/definitions/branch"
                },
                "else": {
                  "$ref": "#/definitions/branch"
                },
                "switch": {
                  "type": "array",
                  "additionalProperties": false,
                  "properties": {
                    "case": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "then": {
                      "additionalProperties": false,
                      "$ref": "#/definitions/branch"
                    }
                  }
                }
              }
            }
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name",
                "states"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "props": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "called": {
                  "type": "string"
                },
                "visible": {
                  "type": "boolean"
                },
                "state": {
                  "type": "string"
                },
                "canTake": {
                  "type": "boolean"
                },
                "onTake": {
                  "type": "string"
                },
                "hidden": {
                  "type": "boolean"
                },
                "unique": {
                  "type": "boolean"
                },
                "states": {
                  "$ref": "#/definitions/states"
                }
              }
            }
          }
        }
      }
    }
  }
}